<!--START TOP AREA-->
<header class="top-area" id="home">
    <div class="header-top-area" style="background-color: #ccc">
        <div class="top-bar">
            <div class="container">
                <div class="row">
                    <div class="col-md-7 col-lg-6 col-sm-8">
                        <div class="call-to-action">
                            {% if email %}<p><i class="fa fa-envelope-o"></i>Email: <a href="#">{{ email }}</a></p>{% endif %}
                            {% if phone %}<p><i class="fa fa-phone"></i>Telephone: <a href="#">{{ phone }}</a></p>{% endif %}
                        </div>
                    </div>
                    <div class="col-md-5 col-lg-6 col-sm-4">
                        {% if cta is not empty -%}
                            <div class="book-table-popup">
                                <a href="{{ cta.url }}">{{ cta.label }}</a>
                            </div>
                        {%- endif %}

                        <div class="top-social-bookmark">
                            <ul>
                                {% if facebook %}<li><a href="{{ facebook }}"><i class="fa fa-facebook"></i></a></li>{% endif %}
                                {% if twitter %}<li><a href="{{ twitter }}"><i class="fa fa-twitter"></i></a></li>{% endif %}
                                {% if dribble %}<li><a href="{{ dribble }}"><i class="fa fa-dribbble"></i></a></li>{% endif %}
                                {% if behance %}<li><a href="{{ behance }}"><i class="fa fa-behance"></i></a></li>{% endif %}
                                {% if feed %}<li><a href="{{ feed }}"><i class="fa fa-feed"></i></a></li>{% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--MAINMENU AREA-->
        <div class="mainmenu-area" id="mainmenu-area">
            <div class="mainmenu-area-bg"></div>
            <nav class="navbar">
                <div class="container">
                    <div class="navbar-header">
                        <button class="collapsed navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-example-js-navbar-scrollspy">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="{{ homepage_url }}" class="navbar-brand"><img src="{{ logo_black|default() }}" alt="logo"></a>
                        <a href="{{ homepage_url }}" class="navbar-brand white"><img src="{{ logo|default() }}" alt="logo"></a>
                    </div>
                    <div class="collapse navbar-collapse bs-example-js-navbar-scrollspy">
                        <!--<div class="search-form-area">
                            <div class="search-form-overlay"></div>
                            <a class="search-form-trigger" href="#search-form">Search<span></span></a>
                            <div id="search-form" class="search-form">
                                <form>
                                    <input type="search" placeholder="Search...">
                                </form>
                            </div>
                        </div>-->
                        <ul id="nav" class="nav navbar-nav cl-effect-11">
                            {% for menu in menus %}
                                <li>
                                    <a class="at-drop-down" href="{{ menu.url }}">{{ menu.text }}
                                    {% if menu.submenus is not empty -%}
                                        <i class="hidden-md hidden-lg fa fa-angle-down"></i>
                                    {%- endif %}
                                    </a>

                                    {% if menu.submenus is not empty -%}
                                        <ul class="sub-menu">
                                        {% for submenu in menu.submenus %}
                                            <li><a href="{{ submenu.url }}">{{ submenu.text }}</a></li>
                                        {% endfor %}
                                        </ul>
                                    {%- endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <!--END MAINMENU AREA END-->

    </div>    
</header>

{# include '@d8training/slider/slider.twig' with slider #}
<!--END TOP AREA-->