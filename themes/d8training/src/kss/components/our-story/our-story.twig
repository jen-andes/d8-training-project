{#
/**
 * @file
 * Our Story component
 *
 * Available variables:
 * - type: The display type {image/video}
 * - kicker: The highlighted title.
 * - title: The title.
 * - description: The description.
 * - cta: The redirect link.
 *   - text: The button text.
 *   - url: The link url.
 * - images[]: An array of images.
 *   - src: Source path of the image
 *   - alt: Alternate text of the image
 * - video_image: The preview image of video.
 *   - src: Source path of the image
 *   - alt: Alternate text of the image
 * - video_link: The video link.
 */
#}
<section class="about-area section-padding">
  <div class="container wow fadeIn">
    <div class="row">
      <div class="col-md-5 col-lg-5 col-sm-12 col-xs-12">
        <div class="area-title">
          <h2>{{ kicker }} <span>{{ title }}</span></h2>
        </div>
        <div class="about-content">
          {{ description }}
          {% if cta|default() -%}
            <a href="{{ cta.url }}" class="read-more">{{ cta.text }}</a>
          {%- endif %}
        </div>
      </div>

      {% if type == 'image' -%}
        <div class="col-md-7 col-lg-7 col-sm-12 col-xs-12">
          <div class="row">
            {% for image in images %}
            <div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
              {% include '@d8training/image/image.twig' with image only %}
            </div>
            {% endfor %}
          </div>
        </div>
      {%- endif %}

      {% if type == 'video' -%}
        <div class="col-md-4 col-lg-4 col-md-offset-1 col-lg-offset-1 col-sm-12 col-xs-12 hidden-xs">
          <div class="about-video">
            {% if video_image|default() %}
              {% include '@d8training/image/image.twig' with video_image only %}
            {% endif %}
            {% if video_link|default() %}
              <a href="{{ video_link }}" class="about-video-button" data-effect="mfp-zoom-in">
                <i class="fa fa-play"></i>
              </a>
            {% endif %}
          </div>
        </div>
      {%- endif %}

    </div>
  </div>
</section>
