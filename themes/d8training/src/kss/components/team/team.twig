{#
/**
 * @file
 * Team
 *
 * Available variables:
 * - kicker: The highlighted title.
 * - title: The title.
 * - members[]: An array of team member.
 *   - name: The name of the member.
 *   - desc: The profile short description.
 *   - image: The member profile image. 
 *     - src: Source path of the image.
 *     - alt: Alternate text of the image.
 *   - social_links[]: An array of social links
 *     - icon: The social link icon.
 *     - link: The social link.
 */
#}
<section class="team-area section-padding">
  <div class="container wow fadeIn">
    <div class="row">
      <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="area-title text-center">
          <h2>{{ kicker }}</h2>
          <h3>{{ title }}</h3>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 team-slider">

        {% for member in members %}
        <div class="single-team-member text-center">
          <div class="team-member-img ">
            {% if member.image|default() %}
              {% include '@d8training/image/image.twig' with member.image only %}
            {% endif %}
            <div class="member-social-bookmark">
              {% if member.social_links is not empty -%}
                <ul>
                  {% for social in member.social_links %}
                  <li><a href="{{ social.link }}" target="_blank"><i class="fa fa-{{ social.icon }}"></i></a></li>
                  {% endfor %}
                </ul>
              {%- endif %}
            </div>
          </div>
          <div class="member-details">
            <h3>{{ member.name }}</h3>
            <p>{{ member.desc }}</p>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    
  </div>
</section>
